page {
  width: 100%;
  height: 100%;
}

scroll-view {
  width: 100%;
  height: 100%;
}

.top {
  height: 256rpx;
  padding: 0 70rpx;
  background-image: -webkit-gradient(linear, left top, left bottom, from(0), color-stop(#00c3cf), to(#25e6d6));
  background-image: linear-gradient(0, #00c3cf, #25e6d6);
}

.top_t {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  height: 120rpx;
  margin-bottom: 35rpx;
}

.top_t_l {
  width: 210rpx;
  text-align: center;
  border-bottom-left-radius: 20rpx;
  border-bottom-right-radius: 20rpx;
  background-color: rgba(0, 0, 0, .2);
}

.top_t_l image {
  width: 170rpx;
  margin-top: 39rpx;
}

.top_t_r {
  width: 376rpx;
}

.top_t_r_1 {
  color: #01918f;
  padding-top: 22rpx;
}

.top_t_r_1 .icon-liuyan {
  margin-right: 5px;
}

.top_t_r_1 .iconfont icon-arrowright {
  margin-left: -3rpx;
}

.top_t_r_2 {
  color: #fff;
  white-space: nowrap;
  overflow: hidden;
  padding-top: 10rpx;
  position: relative;
}

.top_t_r_2::before {
  content: "";
  display: block;
  width: 80rpx;
  height: 100%;
  position: absolute;
  right: 0;
  top: 0;
  background-image: -webkit-linear-gradient(90deg, rgba(23, 217, 212, 0.1), #17d9d4);
  background-image: linear-gradient(90deg, rgba(23, 217, 212, 0.1), #17d9d4);
}

.top_t_r_2 .iconfont {
  margin-right: 8rpx;
}

.icon-iconfont-xiasanjiao {
  display: block;
  position: absolute;
  right: -10rpx;
  top: 50%;
  -webkit-transform: translateY(-50%);
  transform: translateY(-50%);
}

.top_b {
  height: 66rpx;
  line-height: 66rpx;
  text-align: center;
  border-radius: 33rpx;
  background-color: #fff;
}

.no_data {
  text-align: center;
  margin-top: 20%;
}

.no_data_hide {
  display: none;
}

.no_data_img {
  padding: 20rpx 50rpx;
}

.no_data_img image {
  width: 100%;
}

.no_data_text {
  padding: 10rpx 55rpx;
  line-height: 50rpx;
}

/**列表*/

.list_box {
  padding: 35rpx 35rpx 80rpx 35px;
}

.list {
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
  height: 200rpx;
  padding-bottom: 15rpx;
  margin-bottom: 22rpx;
  border-bottom: #e4e4e4 solid 2rpx;
}

.list_l {
  width: 180rpx;
  padding-right: 5rpx;
}

.list_l image {
  width: 180rpx;
  height: 200rpx;
  background-color: #eee;
}

.list_c {
  width: 430rpx;
}

.list_c_1 {
  margin-bottom: 8rpx;
  color: #333;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.list_c_3 {
  height: 64rpx;
  line-height: 32rpx;
  margin: 8rpx 0;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
  text-overflow: ellipsis;
}

.list_c_4 {
  display: flex;
  justify-content: space-between;
  color: #13aeaa;
}

.list_r {
  width: 50rpx;
}

.list_r .iconfont {
  text-align: right;
  font-size: 50rpx;
}

.showLast {
  text-align: center;
}

.showLastHide {
  display: none;
}

.bottom {
  position: fixed;
  left: 0;
  bottom: 0;
  display: flex;
  flex-direction: row;
  width: 100%;
  text-align: center;
  background-color: #01c3cf;
  color: #fff;
}

.bottom_list {
  flex-grow: 1;
  height: 80rpx;
  line-height: 80rpx;
  position: relative;
}

.bottom_list .iconfont {
  margin-right: 8rpx;
}

.bottom_list:not(:last-child):after {
  content: "";
  display: block;
  width: 4rpx;
  height: 100%;
  background-color: #7fe1e7;
  position: absolute;
  right: -2rpx;
  top: 0;
}

.bottom_list:nth-child(1).bed, .bottom_list:nth-child(2).distance,
.bottom_list:nth-child(3).rank {
  color: #ffff80;
}
.ss_box {
  width: 100%;
  height: 100%;
  overflow: hidden;
  position: absolute;
  left: 0;
  top: 0;
  z-index: 999;
  background-color: rgba(255, 255, 255, 1);
  -webkit-transition: height 0.2s ease-in-out;
  transition: height 0.2s ease-in-out;
}

.ss_hide {
  height: 0;
}

.ss_top {
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  height: 124rpx;
  line-height: 114rpx;
  padding: 0 35rpx;
  background-image: -webkit-linear-gradient(0, #00c3cf, #25e6d6);
  background-image: linear-gradient(0, #00c3cf, #25e6d6);
}

.ss_input_box {
  width: 600rpx;
  height: 66rpx;
  line-height: 66rpx;
  padding: 0 35rpx;
  border-radius: 33rpx;
  background-color: #ffffff;
  box-sizing: border-box;
}

.ss_input_box .iconfont {
  margin-right: 10rpx;
}

.ss_input_box input {
  display: inline-block;
  width: 85%;
  vertical-align: middle;
  position: relative;
  top: -0.5px;
}

.ss_input_qx {
  flex-grow: 1;
  text-align: center;
  color: #fff;
}

.ss_rm_bt {
  height: 90rpx;
  line-height: 90rpx;
  margin-top: 40rpx;
  text-align: center;
}

.ss_ls_bt {
  height: 90rpx;
  line-height: 90rpx;
  margin-top: 10rpx;
  text-align: center;
  color: #ffa200;
}

.ss_linkArr {
  padding: 0 30rpx;
}

.ss_linkArr view {
  display: inline-block;
  height: 60rpx;
  line-height: 60rpx;
  padding: 0 30rpx;
  position: relative;
}

.ss_linkArr view:not(:last-child):after {
  content: "|";
  display: block;
  width: 4rpx;
  height: 100%;
  position: absolute;
  right: -2rpx;
  top: 0;
}
