<!--pages/ly/ly.wxml-->
<view class="top">
  <text class="iconfont icon-liuyan"></text>
  <image mode="widthFix" src="/image/ly_logo.png"></image>
</view>
<view class="page_body">
    <view class="page_body_msg">
        联系微信客服：sunhangye
        <view class="page_body_msg_sm" bindtap="showHideEwm">
            扫描二维码
            <view class="page_body_msg_sm_box {{isshow}}"><image mode="widthFix" src="http://www.ahlife.com/skin/hometest/images/weixin.jpg"></image></view>
        </view>
    </view>
    <view class="page_body_msg">
        拨打客服热线：400-5666-225
        <view class="page_body_msg_bh" data-tel="400-5666-225" bindtap="boHao">点击拨号</view>
    </view>
    <input bindfocus="hideEwm" bindinput="setInput" type="number" id="" maxlength="11" placeholder="请输入您的电话，方便后期联系您（选填）" />
    <textarea bindfocus="hideEwm" bindinput="setTextarea"placeholder="请输入您想说的话"  />

    <view class="send_btn f_28" bindtap="sendMsg">提交留言</view>
</view>
