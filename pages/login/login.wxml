<!--pages/login/login.wxml-->
<view class="center">
  <text class="title">登录</text>
</view>
<image class="logo" src="/image/icon@2x.png"></image>

<input animation='{{userInputAnimation}}' class='input-user' value='{{userName}}' type='number' bindinput='userInputEvent' bindblur='userInputBindblur' bindfocus='userInputBindfocus' placeholder='输入员工账号' confirm-type='next' maxlength='8'></input>

<input disabled='{{pwdInputDisabled}}' animation='{{animation}}' bindfocus='pwdInputBindfocus' class='input-pwd' value='{{pwd}}' password='true' bindinput='pwdInputEvent' placeholder='输入员工密码' confirm-type='done'></input>

<view animation="{{loginAnimation}}" class="separation-line" bindtap="loginBtnOnClick">
  <text class='login-text'>登录</text>
</view>
